{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "types": ["node", "jest"],
    "paths": {
      "@app/cli/*": ["apps/cli/src/*"],
      "@app/web/*": ["apps/web/src/*"],
      "@app/cdk/*": ["packages/cdk/src/*"],
      "@app/config/*": ["packages/config/src/*"],
      "@app/emails/*": ["packages/emails/src/*"],
      "@app/lint/*": ["packages/lint/src/*"],
      "@app/scaleway/*": ["packages/cdk/.gen/providers/scaleway/*"],
      "@app/storybook/*": ["packages/storybook/src/*"],
      "@app/ui/*": ["packages/ui/src/*"],
      "@app/test/*": ["packages/test/src/*"],
      "@app/fixtures/*": ["packages/fixtures/src/*"],
    },
    "typeRoots": [
      "./node_modules/@types",
      "./packages/test/node_modules/@types"
    ]
  },
  "include": ["./packages/test/src/jest.setup.ts"],
  "files": ["./packages/test/node_modules/jest-extended/types/index.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "experimentalResolver": true
  }
}
