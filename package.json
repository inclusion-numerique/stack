{
  "name": "la-base",
  "description": "La Base - Monorepo",
  "version": "0.1.0",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "engines": {
    "node": "^22.15"
  },
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "build": "turbo build",
    "cli": "dotenv -- ./apps/cli/node_modules/.bin/tsx apps/cli/src/index.ts",
    "clean": "rm -rf node_modules",
    "clean:workspaces": "turbo clean",
    "dev": "turbo dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md,css}\"",
    "lint": "turbo lint",
    "tsc": "turbo tsc",
    "test": "turbo test",
    "test:integration": "pnpm -F web test:integration",
    "test:e2e": "pnpm -F e2e cy open",
    "with-env": "dotenv --",
    "scw": "pnpm with-env scw",
    "manypkg": "manypkg",
    "start:web": "pnpm -F web dev",
    "fixtures:load": "pnpm -F fixtures load",
    "prisma:generate-migration": "pnpm --silent -F @app/web prisma migrate dev --name",
    "db:init": "pnpm -F web prisma generate && pnpm -F web prisma migrate deploy",
    "docker:start": "docker compose -f ./docker-compose.dev.yml -p la-base up -d",
    "docker:stop": "docker compose -f ./docker-compose.dev.yml -p la-base down",
    "docker:reset": "pnpm docker:stop && docker volume rm la-base_pgdata && pnpm docker:start && pnpm db:init"
  },
  "pnpm": {
    "overrides": {}
  },
  "optionalDependencies": {
    "turbo-linux-64": "^2.5.3",
    "turbo-linux-arm64": "^2.5.3"
  },
  "volta": {
    "node": "22.15.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@manypkg/cli": "^0.24.0",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.3"
  }
}
